(bin_base) -> {
    unsigned = bin_base.unsigned
    signed   = bin_base.signed
    bin      = bin_base.bin

    u8  = (x) -> unsigned(1, x)
    u16 = (x) -> unsigned(2, x)
    u32 = (x) -> unsigned(4, x)
    u64 = (x) -> unsigned(8, x)

    i8  = (x) -> signed(1, x)
    i16 = (x) -> signed(2, x)
    i32 = (x) -> signed(4, x)
    i64 = (x) -> signed(8, x)
}
